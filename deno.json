{
  "imports": {
    "std/": "https://deno.land/std@0.201.0/"
  },
  "tasks": {
    "start": "deno run --allow-env=HOME --allow-read=/Users --allow-write=/Users --allow-net=raw.githubusercontent.com src/main.ts",
    "test": "deno test --allow-env=HOME --allow-read=/Users --allow-write=/Users --allow-net=raw.githubusercontent.com",
    "test-coverage": "deno test --allow-env=HOME --coverage=cov_profile --allow-read=/Users --allow-write=/Users --allow-net=raw.githubusercontent.com"
  },
  "fmt": {
    "useTabs": true,
    "semiColons": true,
    "singleQuote": true,
    "include": ["src/"],
    "exclude": ["src/test/", "data/fixtures/**/*.ts"]
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/test/", "data/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "compilerOptions": {
    "allowJs": false,
    "lib": ["deno.window"],
    "strict": true
  },
  "lock": "./lock.file"
}
